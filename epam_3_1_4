
package com.company;

public class Main {

    public static void main(String[] args) {
    char[] str = new char[] {'1','7', 'L', 'l', 'O','1','h','0','5','2','@'};
    int k = 0;
        if(str[0] >= '0' && str[0] <= '9')
            k++;
    for(int i = 1;i< str.length;i++){
        if(str[i] >= '0' && str[i] <= '9' && (str[i - 1] < '0' || str[i - 1] > '9'))
        k++;
    }

        System.out.println(k);
}
}
